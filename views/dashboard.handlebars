{{#if posts.length}}
<section>
  <h2>Create New Post</h2>
  <a href="/dashboard/create-post" class="btn">Create new post</a>
</section>

<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{#unless posts.length}}
<section>
  <h3>You have no posts! Why not create one?</h3>
  <a href="/dashboard/create-post" class="btn">Create new post</a>
</section>
{{/unless}}
